<%- layout("/layouts/boilerplate") %>

<div class="row">
   
    <h4 class="col-6 offset-4">Signup for Wanderlust</h4>
    <div class="col-8 offset-2">
       
        <form action="/signup" method="post" class="needs-validation" novalidate>

            <div class="mb-3">
                <label for="username" class="form-label">Userame:</label>
                <input type="text" id="username" name="username" placeholder="Enter a username"
                    class="form-control" required />
                <div class="valid-feedback">
                    username Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">emailId:</label>
                <input type="email" id="email" name="email" placeholder="Enter an email Id"
                    class="form-control" required />
                <div class="invalid-feedback"> Enter a proper email</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">password:</label>
                <input type="password" id="password" name="password" placeholder="Enter an password "
                    class="form-control" required />
                <div class="invalid-feedback"> Enter a proper password</div>
            </div>


        

            <button type="submit" class=" btn btn-danger">Signup</button>
        </form>

    </div>
</div>