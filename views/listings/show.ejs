<% layout("/layouts/boilerplate") %>

  <body>

    <div class="row mt-3 mb-3">
      <div class="col-8 offset-2">
        <h1>
          <%= listing.title %>
        </h1>
      </div>
      <div class="card listing-card col-6 offset-2">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image" />
        <div class="card-body">
          <p class="card-text">
            <!-- //<%= listing.title %> <br /> -->
            <%= listing.description %> <br />
              &#8377;<%= listing.price %> <br />
                <!-- .toLocaleString("en-IN") -->
                <%= listing.location %> <br />
                  <%= listing.country %> <br />
          </p>
        </div>

        <div class="col-1 mt-2">
          <form action="/listings/<%= listing._id %>/edit" method="get"><button class="btn btn-danger">Edit</button>
          </form>
        </div>

        <div class="col-1 mt-3">
          <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
        <hr>

        <div class=" col-8 offset-0">

          <h5>Leave a Review :</h5>
          <form action="/listings/<%= listing._id %>/review" method="post" class="needs-validation" novalidate>
            <div>
              <label for="rating" class="form-label">Ratings:</label>
              <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required>

              <div class="invalid-feedback"> Please Rate</div>
            </div>

            <div>
              <label for="comment" class="form-label">Comment:</label>
              <textarea id="comment" name="review[comment]" cols="40" rows="2" class="form-control" required></textarea>
              <div class="invalid-feedback"> Please enter a feedback</div>
            </div>

            <button class="btn btn-danger mt-2">Submit</button>

          </form>

        </div>
        <hr>



        <p><b>All reviews:</b></p>
        <div class="row ">
          <% for(review of listing.reviews){ %>
            <div class="card col-5 ms-3 mb-3">
              <div class="card-body">
                <h5 class="card-title">Jone Doe</h5>
                <p class="card-text">
                  <%= review.comment %>
                </p>
                <p class="card-text">
                  <%= review.rating %> &#9733;
                </p>
                <form action="/listings/<%= listing._id %>/review/<%= review._id %>?_method=DELETE" method="post">
                  <button class="btn btn-sm btn-danger mb-1">Delete</button>
                </form>
              </div>
            </div>
            <% } %>
        </div>



      </div>
    </div>
  </body>
  <script src="/js/script.js"></script>



