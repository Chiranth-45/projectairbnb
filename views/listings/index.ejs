<% layout("/layouts/boilerplate") %>


  <body>
    <%= success %>
    <%= error %>
    <h3>All Listings</h3>
    <!-- <form action="/listings/new" method="get">
      <button>Create new Listings</button>
    </form> -->
    <div class=" row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">

      <% for (let listing of alllistings){ %>
        <div class="card col listing-card" style="width: 21.7rem;">

          <a href="/listings/<%= listing._id %>" class="listing-link">
            <img src="<%= listing.image.url %>" class="card-img-top " alt="listing_image" style="height: 20rem;">
            <div class="card-img-overlay "></div>
            <!-- one of the property of effects of overlay -->
            <div class="card-body">
              <p class="card-text">
                <b>
                  <%= listing.title %>
                </b>
                <br>&#8377;<%= listing.price%>/ night <br>
                
              </p>
            </div>
          </a>
        </div>

        <% } %>

    </div>

  </body>

